#######################################
# Webphone App Environment Variables
#######################################

# Application profile (e.g., dev, stage, prod)
WEBPHONE_PROFILE=prod

# Backend server configuration
WEBPHONE_SERVER_PORT=8080

# Base path for the app (e.g., /webphone or leave empty for root)
WEBPHONE_CONTEXT_PATH=/webphone

# CORS origins (must match frontend/backend deployment origins)
WEBPHONE_FRONTEND_ORIGIN=https://webphone.com
WEBPHONE_BACKEND_ORIGIN=https://webphone.com

# MongoDB connection
WEBPHONE_DB_URL=mongodb://root:root@domain:27017/webphone?authSource=admin

# Keycloak authentication config
WEBPHONE_KEYCLOAK_ORIGIN=https://keycloak.com:8080
WEBPHONE_KEYCLOAK_REALM=webphone
WEBPHONE_KEYCLOAK_CLIENT_ID=webphone-client
WEBPHONE_ISSUER_URI=https://keycloak.com:8080/realms/webphone

# Optional
WEBPHONE_AUTH_HEADERS_URL=https://auth.server/oauth2/auth
